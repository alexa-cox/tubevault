{
  "name": "tubevault",
  "version": "1.0.0",
  "description": "TubeVault monorepo with centralized documentation",
  "private": true,
  "workspaces": [
    "apps/web",
    "apps/mobile",
    "apps/server",
    "docs",
    "packages/*"
  ],
  "scripts": {
    "build:docs": "npm run build:jsdoc && npm run build:storybook:web && npm run build:storybook:mobile && npm run build:api-docs && npm run build:docusaurus",
    "build:jsdoc": "npx jsdoc -c jsdoc.config.js",
    "build:storybook:web": "cd apps/web && npm run build-storybook",
    "build:storybook:mobile": "cd apps/mobile && npm run build-storybook",
    "build:api-docs": "cd apps/server && npm run build-docs",
    "build:docusaurus": "cd docs && npm run build",
    "dev:docs": "cd docs && npm run start",
    "dev:storybook:web": "cd apps/web && npm run storybook",
    "dev:storybook:mobile": "cd apps/mobile && npm run storybook",
    "clean:docs": "rm -rf docs/static/jsdoc docs/static/storybook docs/static/api-docs docs/build",
    "docs:full-rebuild": "npm run clean:docs && npm run build:docs",
    "install:all": "npm install && npm run install:apps",
    "install:apps": "cd apps/web && npm install && cd ../mobile && npm install && cd ../server && npm install && cd ../../docs && npm install"
  },
  "devDependencies": {
    "jsdoc": "^4.0.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/alexa-cox/tubevault"
  },
  "author": "Alexandria",
  "license": "GPL-3.0-only"
}
